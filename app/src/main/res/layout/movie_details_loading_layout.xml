<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/moviePosterCardView"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMovieTitle"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <View
            android:id="@+id/imgCoverFilm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loading_color"/>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/tvMovieTitle"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        android:background="@color/loading_color"/>

    <FrameLayout
        android:id="@+id/tvMovieData"
        android:layout_width="150dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:background="@color/loading_color"/>

    <FrameLayout
        android:id="@+id/flMovieDesc1"
        android:layout_width="240dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        app:layout_constraintTop_toBottomOf="@id/tvMovieData"
        android:background="@color/loading_color"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <FrameLayout
        android:id="@+id/flMovieDesc2"
        android:layout_width="160dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        app:layout_constraintTop_toBottomOf="@id/flMovieDesc1"
        android:background="@color/loading_color"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"/>

    <FrameLayout
        android:id="@+id/flMovieDesc3"
        android:layout_width="200dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        app:layout_constraintTop_toBottomOf="@id/flMovieDesc2"
        android:background="@color/loading_color"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"/>

    <FrameLayout
        android:id="@+id/flMovieDesc4"
        android:layout_width="220dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        app:layout_constraintTop_toBottomOf="@id/flMovieDesc3"
        android:background="@color/loading_color"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"/>

    <FrameLayout
        android:id="@+id/tvMovieGenres"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toEndOf="@id/moviePosterCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flMovieDesc4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/loading_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>