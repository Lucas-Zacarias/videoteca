    android:layout_height="match_parent"
    tools:context=".ui.activities.HomeActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAppLogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearanceOverlay="@style/circleImageViewStyle"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/homeSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/borde_redondo"
        android:theme="@style/AppSearchView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibFav"
        app:queryHint="@string/buscar1"
        android:layout_marginEnd="16dp"/>

    <ImageButton
        android:id="@+id/ibFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/homeSearchView"
        app:layout_constraintEnd_toStartOf="@+id/ibUser"
        android:backgroundTint="@color/background_color"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/fav_button" />

    <ImageButton
        android:id="@+id/ibUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/homeSearchView"
        android:backgroundTint="@color/background_color"
        android:src="@drawable/ic_account"
        android:contentDescription="@string/account_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNestedGenres"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/homeSearchView"
        app:layout_constraintBottom_toTopOf="@+id/barContent"
        tools:listitem="@layout/rv_home_parent_layout"/>

